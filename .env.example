# Core application
APP_ENV=template
# For Linux Docker: use 172.17.0.1:5432 (Docker bridge gateway) instead of host.docker.internal
# For Mac/Windows Docker: use host.docker.internal:5432
# For local development (no Docker): use localhost:5432
DATABASE_URL=postgresql://wws-admin:WwsAdmin2026%21@172.17.0.1:5432/wws_base_db
SECRET_KEY=change-me-please
SESSION_COOKIE_NAME=wws_session
SESSION_TTL_MINUTES=120

# Seed admin (bootstrap_db.py will hash this on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# OpenAI Assistants
OPENAI_API_KEY=sk-xxx
ASSISTANT_ID=asst_xxx

# SMTP (mail notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=smtp-user
SMTP_PASSWORD=smtp-pass
SMTP_FROM=WebWise <no-reply@example.com>
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# mxroute SMTP (for broker negotiation emails and reply tracking)
# Also used for contact form submissions.
MXROUTE_SMTP_HOST=fusion.mxrouting.net
MXROUTE_SMTP_PORT=465
MXROUTE_SMTP_USER=dispatch@gcdloads.com
MXROUTE_SMTP_PASSWORD=your-password
MXROUTE_FROM_EMAIL=noreply@greencandledispatch.com

# Contact form: where to receive submissions (contact@gcdloads.com)
CONTACT_RECIPIENT_EMAIL=contact@gcdloads.com

# Twilio (SMS/voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_FROM=+1234567890

# DigitalOcean Spaces (S3-compatible) – BOL / file storage
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=our-cloud-storage
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
# Prefix (folder) inside the bucket so this app uses one path: our-cloud-storage/dispatch/...
STORAGE_BUCKET_PREFIX=dispatch

# Buyback Notifications (Slack/Discord webhooks for community visibility)
SLACK_BUYBACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
DISCORD_BUYBACK_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL
DISCORD_INVITE_URL=https://discord.gg/greencandle

# Stripe (Small Fleet Setup checkout: $25/truck, 1–5 trucks)
STRIPE_SECRET_KEY=sk_test_xxx

# Optional
LOG_LEVEL=info
BASE_URL=http://localhost:8999
