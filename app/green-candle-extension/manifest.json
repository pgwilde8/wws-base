{
  "manifest_version": 3,
  "name": "Green Candle Scout",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://134.199.241.56:8990/*",
    "https://*.dat.com/*",
    "https://*.truckstop.com/*",
    "https://app.trucksmarter.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://134.199.241.56:8990/*",
        "https://*.dat.com/*",
        "https://*.truckstop.com/*",
        "https://app.trucksmarter.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}